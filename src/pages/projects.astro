---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import HorizontalCardPublication from "../components/HorizontalCardPublication.astro";
---

<BaseLayout title="Research & Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Research</div>
  </div>

  <HorizontalCardPublication
    badge="MICCAI 2024"
    title="Training-Free Condition Video Diffusion Models for single frame Spatial-Semantic Echocardiogram Synthesis"
    authors={["Phi Nguyen Van", "Tri Phi Nguyen Ha", "Huy Hieu Pham", "Quoc Long Tran"]}
    author_index={0}
    img="/images/projects/miccai.jpg"
    abstract="This study introduces a training-free method for generating echocardiograms from a single segmentation map using 3D-Unet with Temporal Attention Layers. It addresses data scarcity in medical imaging by generating plausible echocardiograms without additional training datasets, evaluated on CAMUS and EchoNet-Dynamic."
    url="https://link.springer.com/chapter/10.1007/978-3-031-72089-5_63"
  />
  
  <HorizontalCardPublication
    badge="Preprint"
    title="MedIDM: Synthesis Medical Video Segmentation Dataset via Implicit Motion Representation from Diffusion Model"
    authors={["Phi Nguyen Van", "Tri Phi Nguyen Ha", "Minh Nguyen Tuan", "Huy Hieu Pham", "Quoc Long Tran"]}
    author_index={0}
    img="/images/projects/medidm.jpg"
    abstract="MedIDM presents a synthetic dataset for medical video segmentation using an implicit motion representation model, focusing on diffusion methods for training and testing in medical imaging applications."
    url="https://arxiv.org/abs/2306.09687"
  />

  <HorizontalCardPublication
    badge="arXiv Preprint"
    title="Echocardiography Segmentation Using Neural ODE-based Diffeomorphic Registration Field"
    authors={["Phi Nguyen Van", "Huy Hieu Pham", "Quoc Long Tran"]}
    author_index={0}
    img="/images/projects/echocardiography_segmentation.jpg"
    abstract="This paper explores a novel approach for echocardiography segmentation using Neural ODE-based diffeomorphic registration fields, enhancing robustness in medical image segmentation."
    url="https://arxiv.org/abs/2306.09687"
  />

  <HorizontalCardPublication
    badge="Frontiers in Cardiovascular Medicine (Vol. 10)"
    title="Ensemble Learning of Myocardial Displacements for Myocardial Infarction Detection in Echocardiography"
    authors={["Tuan Nguyen", "Phi Nguyen", "Dai Tran", "Hung Pham", "Quang Nguyen", "Thanh Le", "Hanh Van", "Bach Do", "Phuong Tran", "Vinh Le", "Thuy Nguyen", "Long Tran", "Hieu Pham"]}
    author_index={1}
    img="/images/projects/myocardial_detection.jpg"
    abstract="This publication introduces an ensemble learning approach for myocardial displacement tracking, supporting myocardial infarction detection with high accuracy in echocardiography."
    url="https://www.frontiersin.org/articles/10.3389/fcvm.2023.1185172"
  />

  <HorizontalCardPublication
    badge="ICASSP 2024"
    title="Echocardiography Video Synthesis from End Diastolic Semantic Map via Diffusion Model"
    authors={["Phi Nguyen Van", "Minh Duc Tran", "Huy Hieu Pham", "Quoc Long Tran"]}
    author_index={0}
    img="/images/projects/icassp2024.jpg"
    abstract="Presented at ICASSP 2024, this research introduces a novel method for synthesizing echocardiogram video sequences using diffusion models based on a single end-diastolic semantic map."
    url="https://arxiv.org/abs/2306.09687"
  />

  <div>
    <div class="text-3xl w-full font-bold mt-5 mb-5">Teaching</div>
  </div>

  <HorizontalCard
    title="Data Processing with Python"
    img="https://camo.githubusercontent.com/python-logo.jpg"
    desc="Course content for Data Processing with Python."
    url="github.com/gungui98/COMP-Python"
    badge="Teaching"
  />

  <HorizontalCard
    title="Advanced Programming"
    img="https://camo.githubusercontent.com/python-logo.jpg"
    desc="Course content for Advanced Programming."
    url="github.com/gungui98/COMP-Advanced"
    badge="Teaching"
  />

  <HorizontalCard
    title="Computer Graphics"
    img="https://camo.githubusercontent.com/python-logo.jpg"
    desc="Course content for Computer Graphics."
    url="github.com/gungui98/COMP-Graphics"
    badge="Teaching"
  />


</BaseLayout>
